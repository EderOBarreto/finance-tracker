<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover mt-4">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @friends.each do |friend|%>
        <tr>
          <th scope="row"><%= friend.email %></th>
          <th><%= friend.first_name %></th>
          <th><%= friend.last_name %></th>
          <th><%= link_to 'Stop following', friendship_path(friend), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %></th>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
