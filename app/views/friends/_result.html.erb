<div class="results-block mt-4">
  <%= render 'layouts/messages' %>
</div>
<% if !@friends.empty? %>
  <div class="card card-header results-block mt-4">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong> <%= link_to "View Profile", '#', class: 'btn btn-sm btn-success' %></td>
            <td>
              <% if current_user.not_friends_with?(friend.id)%>
                <%= link_to 'Follow', friendships_path(friend: friend),methods: :post, class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span>You are friends</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>